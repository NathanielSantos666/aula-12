//o bagulho la

let opção = Number(prompt('1. Adição \n 2. Subtração \n 3. Multiplicação \n 4. Divisão \n Digite um número.'));
let a = Number(prompt('Digite um número.'));
let b = Number(prompt('Digite outro número.'));

funcao = opção === 1 ? console.log(operacaoSoma(a,b)) :
opção === 2 ? console.log(operacaoSub(a,b)) :
opção === 3 ? console.log(operacaoMulti(a,b)) :
opção === 4 ? console.log(operacaoDiv(a,b)) : 
console.log("fim do programa");
