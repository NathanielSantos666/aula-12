// //3.
function operacaoSoma(soma1, soma2) {
    let soma = soma1 + soma2;
    return soma;
}

function operacaoSub(sub1, sub2) {
    let sub = sub1 - sub2;
    return sub;
}

function operacaoMulti(multi1, multi2) {
    let multi = multi1 * multi2;
    return multi;
}

 function operacaoDiv(div1, div2) {
    let div = div1 / div2;
    return div;
}

